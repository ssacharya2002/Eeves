generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Event {
  id           String   @id @default(uuid())
  organizerId  String
  image        String
  name         String
  location     String
  city         String
  hostedBy     String
  description  String
  price        Int
  dateTime     DateTime
  totalTickets Int
  ticketSold   Int      @default(0)

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Ticket    Ticket[]

  @@index([categoryId])
  // @@index([city])
  @@fulltext([name])
  @@fulltext([city])
}

model Category {
  id   String @id @default(uuid())
  name String

  events Event[]
}

model Ticket {
  id         String   @id @default(uuid())
  userId     String
  userName   String
  email      String
  event      Event    @relation(fields: [eventId], references: [id])
  eventId    String
  totalPrice Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}